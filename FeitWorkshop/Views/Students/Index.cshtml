@model FeitWorkshop.ViewModels.StudentVM

@{
    ViewData["Title"] = "Студенти";
}

<h1>Студенти</h1>

<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {<p><a asp-action="Create">Додади нов</a></p>}
</div>
<br />
<form asp-controller="Students" asp-action="Index" method="get">
    <p>
        Име: <input class="form-control" type="text" asp-for="FName" />
        Презиме: <input class="form-control" type="text" asp-for="LName" />
        Индекс: <input class="form-control" type="text" asp-for="Id" />
        <span style="margin-left:5px;margin-right:5px;"><input type="submit" value="Филтрирај" class="btn btn-primary btn-sm" /></span>|
        <a asp-action="Index">Ресетирај</a>
    </p>
</form>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Studens[0].StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studens[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studens[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studens[0].EnrollmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studens[0].AcquiredCredits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studens[0].CurrentSemestar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studens[0].EducationLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Studens)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcquiredCredits)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentSemestar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EducationLevel)
                </td>
                <td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {<a asp-action="Edit" asp-route-id="@item.Id">Уреди</a><p style="display:inline"> | </p>}
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Student"))
                    {<a asp-action="EditSt" asp-route-id="@item.Id">Уреди</a><p style="display:inline"> | </p>}
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {<p style="display:inline"> | </p><a asp-action="Delete" asp-route-id="@item.Id">Избриши</a>}
                </td>
            </tr>
        }
    </tbody>
</table>
