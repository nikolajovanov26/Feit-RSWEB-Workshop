@model FeitWorkshop.ViewModels.EnrollmentsVM

@{
    ViewData["Title"] = "Уреди предмет";
}

<h1>Уреди</h1>

<h4>@Html.DisplayFor(model => model.Course.Title)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Course.Id" />
            <div class="form-group">
                <input type="hidden" asp-for="Course.Title" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Course.Credits" />
                Кредити: @Html.DisplayFor(model => model.Course.Credits)
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Course.Programme" />
                Програма: @Html.DisplayFor(model => model.Course.Programme)
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Course.EducationLevel" />
                Циклус на студии: @Html.DisplayFor(model => model.Course.EducationLevel)
            </div>
            <div class="form-group">
                <label asp-for="Course.Semester" class="control-label"></label>
                <input asp-for="Course.Semester" class="form-control" />
                <span asp-validation-for="Course.Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.FirstTeacherId" class="control-label"></label>
                <select asp-for="Course.FirstTeacherId" class="form-control" asp-items="ViewBag.FirstTeacherId"></select>
                <span asp-validation-for="Course.FirstTeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.SecondTeacherId" class="control-label"></label>
                <select asp-for="Course.SecondTeacherId" class="form-control" asp-items="ViewBag.SecondTeacherId"></select>
                <span asp-validation-for="Course.SecondTeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedStudents" class="control-label"></label>
                <select asp-for="SelectedStudents" class="form-control js example basic multiple" asp-items="Model.StudentList"> </select>
                <span asp-validation-for="SelectedStudents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зачувај" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery3.2.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#SelectedStudents").select2();
        });
    </script>
}
